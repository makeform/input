.variant { display: none }
.has-variant .variant { display: inline }
.unit
  pointer-events: none
  text-align: right
  margin: -1em .66em 0 auto
  transform: translate(0,.35em)
  width: fit-content
  transition: margin-right .15s ease-in-out
  line-height: 1em
  font-size: .66em
  text-shadow: -1px -1px 0 white, 1px 1px 0 white, 2px -2px 0 white, -2px 2px 0 white
.is-invalid + .unit
  margin-right: 2.75em
img
  max-width: 100%
  max-height: 80vh
  width: 100%
  object-fit: contain
